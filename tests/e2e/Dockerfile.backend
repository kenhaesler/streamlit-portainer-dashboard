# E2E Test Backend Dockerfile - uses public images
FROM python:3.12-slim

ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

WORKDIR /app

# Install dependencies
COPY pyproject.toml ./
RUN pip install --no-cache-dir -e .

# Copy application code
COPY src/ ./src/

# Run uvicorn
EXPOSE 8000
CMD ["python", "-m", "uvicorn", "portainer_dashboard.main:app", "--host", "0.0.0.0", "--port", "8000"]
